<li id = "comment-<%=comment._id%>">
    <p>
       <div class = "space-between-comment">
        <div id = "comment-name-dp">
           
            <div>
                <img class = "Dp_post_comment" src="<%=comment.user.avatar%>" width="25"> &nbsp;
            </div>
            <div>
                <%= comment.user.name %> 
            </div>
            
        </div>
        
        <div>
            <% if(locals.user && (locals.user.id == comment.user.id || locals.user.id == post.user.id)) { %>
                <small>
                    <a class = "delete-comment-button" href="/comments/destroy/<%=comment._id%>"><i class="fas fa-trash"></i></a>
                </small>
            <% } %> 
        </div>
       </div>
       <div id = "lalign">
        <%= comment.content %>
     </div>
       <div id = "like-comment-container">
        <div id = "like-comment">
            <% if(locals.user){ %>
             <a class = "toggle-like-button" data-likes = "<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                 <i class="fas fa-thumbs-up"></i> <%=comment.likes.length%> 
             </a>
         <% }else{ %>
             <i class="fas fa-thumbs-up"></i> <%= comment.likes.length %> 
         <% } %> 
            </div>
       </div>
    
        
    </p>
</li>