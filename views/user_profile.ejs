<link rel="stylesheet" href="<%= assetPath('css/user_profile.css')%>">

   



<div id = "space-around">
   <div id = "profile-container">
      <div id = "img-container">
         <img  src="<%=profile_user.avatar%>" alt="<%= profile_user.name %>" width="200">
      </div>
      <br><br><br>
      <% if(user.id == profile_user.id){ %>
         <!-- IF User matches then show the form -->
         <form action="/users/update/<%= profile_user.id %>" enctype ="multipart/form-data"  method="POST">         
            
            <div class="profile-update-input">
               <h1>Update Profile</h1>
            </div>
            
            <div class="profile-update-input">
               <input type="text" name="name" placeholder="Your name" value="<%= profile_user.name%>" required>
            </div>
   
            <div class="profile-update-input">
               <input type="text" name="email" placeholder="Your email" value="<%= profile_user.email%>" required>
   
            </div>
   
            <div >
               <input type="file" name="avatar" placeholder="Profile Picture" id="">
            </div>
   
            <div class="profile-update-input">
               <button>Update</button>
            </div>
         </form>
         
      
      <% }else{ %>
         <!-- else show only profile info -->
         <p>Name: <%= profile_user.name %></p>
         <br>
      <p>Email: <%= profile_user.email%></p>
         
      <% } %>    
   </div>
</div>
